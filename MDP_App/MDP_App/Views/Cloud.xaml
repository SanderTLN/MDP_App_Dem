<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDP_App.Views.Cloud">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Wheat">
            <Label
                Text="Near_You является чемпионом Wargaming.net League 2015 Grand Final, а также многократным призёром Gold Series."
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand"
                FontAttributes="Bold"
                FontSize="25"
                Padding="5"
                HorizontalTextAlignment="Center"
                />
            <Image
                x:Name="near"
                Source="near.png"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand"
                WidthRequest="300"
                HeightRequest="300"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>