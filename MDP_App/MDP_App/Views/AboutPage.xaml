<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDP_App.Views.AboutPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Wheat">
            <Label
                Text="Amway921 является одним из самых популярных и плодотворных видеоблогеров по игре World of Tanks, а также одним из самых узнаваемых игроков в игре."
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand"
                FontAttributes="Bold"
                FontSize="25"
                Padding="5"
                HorizontalTextAlignment="Center"
                />
            <Image
                x:Name="amway"
                Source="amway.jpg"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand"
                WidthRequest="300"
                HeightRequest="300"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>